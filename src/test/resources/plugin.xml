<?xml version="1.0" encoding="utf-8" ?>
<plugin xmlns="xmlns://www.fortifysoftware.com/schema/pluginmanifest-1.0.xsd"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="PluginDescriptor"
        id="com.example.parser" api-version="1.0">
    <plugin-info xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="PluginInfo">
        <name>Parser API implementation example</name>
        <version>1.0</version>
        <data-version>1</data-version>
        <vendor name="Example vendor" url="https://www.example.com/"/>
        <plugin-icon>images/sample-icon.png</plugin-icon>
        <plugin-logo>images/sample-logo.png</plugin-logo>
        <description>Parser API implementation example</description>
        <resources>
            <localization>
                <language id="default" localtion="resources/sample_en.properties"/>
                <language id="en_US" localtion="resources/sample_en_US.properties"/>
                <language id="ru" localtion="resources/sample_ru.properties"/>
            </localization>
        </resources>
        <subscriptions>
            <subscription>FPR_PROCESSING</subscription>
        </subscriptions>
        <configuration>
            <plugin-parameters>
                <param name="StringParameter" type="STRING"/>
                <param name="DecimalParameter" type="DECIMAL"/>
                <param name="DateParameter" type="DATE"/>
            </plugin-parameters>
        </configuration>
    </plugin-info>
    <issue-parser xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="IssueParser">
        <engine-type>SAMPLE</engine-type>
        <output-data>
            <custom-attributes>
                <attribute id="projectId" type="STRING"/>
                <attribute id="projectName" type="STRING"/>
                <attribute id="versionId" type="STRING"/>
                <attribute id="projectVersion" type="STRING"/>
                <attribute id="vulnerabilityId" type="STRING"/>
                <attribute id="description" type="LONG_STRING"/>
                <attribute id="baseScore" type="DECIMAL"/>
                <attribute id="impact" type="DECIMAL"/>
                <attribute id="url" type="STRING"/>
            </custom-attributes>
        </output-data>
    </issue-parser>
</plugin>

